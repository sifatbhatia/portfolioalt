import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { Link } from 'react-router-dom';
import projects from '../data/projects';

const Projects = () => {
  const [hoveredProject, setHoveredProject] = useState(null);
  const [isMobile, setIsMobile] = useState(false);

  // Separate featured and misc projects
  const featuredProjects = [];
  const miscProjects = [];
  
  projects.forEach(project => {
    if (project.category === 'misc') {
      miscProjects.push(project);
    } else {
      featuredProjects.push(project);
    }
  });
  
  // Sort projects by ID
  const sortedFeaturedProjects = [...featuredProjects].sort((a, b) => a.id - b.id);
  const sortedMiscProjects = [...miscProjects].sort((a, b) => a.id - b.id);

  // Handle project hover
  const handleProjectHover = (index) => {
    if (!isMobile) {
      setHoveredProject(index);
    }
  };
  
  // Handle mouse leave
  const handleProjectLeave = () => {
    setHoveredProject(null);
  };

  // Check if mobile on mount and window resize
  useEffect(() => {
    const checkIfMobile = () => {
      setIsMobile(window.innerWidth < 768);
    };

    checkIfMobile();
    window.addEventListener('resize', checkIfMobile);
    
    return () => {
      window.removeEventListener('resize', checkIfMobile);
    };
  }, []);

  // Animation variants
  const containerVariants = {
    hidden: { opacity: 0 },
    visible: {
      opacity: 1,
      transition: {
        staggerChildren: 0.1
      }
    }
  };

  const itemVariants = {
    hidden: { opacity: 0, y: 20 },
    visible: {
      opacity: 1,
      y: 0,
      transition: {
        type: 'spring',
        damping: 15,
        stiffness: 100
      }
    },
    hover: {
      scale: 1.02,
      transition: {
        type: 'spring',
        damping: 15,
        stiffness: 200
      }
    }
  };

  const previewVariants = {
    hidden: { opacity: 0, x: 50 },
    visible: { 
      opacity: 1, 
      x: 0,
      transition: {
        type: 'spring',
        damping: 25,
        stiffness: 300
      }
    },
    exit: { 
      opacity: 0,
      x: 50,
      transition: { duration: 0.2 }
    }
  };

  return (
    <section className="min-h-screen bg-gradient-to-b from-[#aeaccd] to-[#aeaccd] py-24 px-4 md:px-8">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="text-center mb-20 max-w-3xl mx-auto">
          <span className="text-[#0c1a3d] font-mono text-sm tracking-wider mb-4 block">
            SELECTED WORK
          </span>
          <h2 className="text-4xl md:text-5xl font-bold text-[#0c1a3d] mb-6 leading-tight">
            Projects & Case Studies
          </h2>
          <div className="w-24 h-0.5 bg-gradient-to-r from-transparent via-[#0c1a3d] to-transparent mx-auto"></div>
        </div>

        <div className="relative">
          {/* Project Grid */}
          <div className="container mx-auto px-4 py-12 md:py-16 lg:py-20">
            {/* Featured Projects Section */}
            <div className="mb-16">
              <h2 className="text-3xl md:text-4xl font-bold text-white mb-8">
                Featured Projects
              </h2>
              <motion.div 
                className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                variants={containerVariants}
                initial="hidden"
                animate="visible"
              >
                {sortedFeaturedProjects.map((project, index) => (
                  <motion.div 
                    key={project.id}
                    className="relative group h-full"
                    custom={index}
                    variants={itemVariants}
                    whileHover="hover"
                    onMouseEnter={() => handleProjectHover(project.id)}
                    onMouseLeave={handleProjectLeave}
                  >
                    <Link 
                      to={`/projects/${project.slug}`} 
                      className="absolute inset-0 z-10"
                      aria-label={`View ${project.title} details`}
                    />
                    <div className="flex flex-col h-full bg-gradient-to-br from-[#03012f] to-[#0a0a2a] rounded-2xl overflow-hidden border border-white/5 hover:border-white/10 transition-all duration-300 group-hover:shadow-2xl group-hover:shadow-black/30 relative">
                      {/* Project Image Overlay */}
                      <div className="absolute inset-0 z-0 overflow-hidden opacity-0 group-hover:opacity-40 transition-opacity duration-500">
                        <img 
                          src={project.image} 
                          alt={project.title}
                          className="w-full h-full object-cover transform scale-110 group-hover:scale-100 transition-transform duration-1000 ease-out"
                          onError={(e) => {
                            e.target.onerror = null;
                            e.target.src = 'data:image/svg+xml;base64,';
                          }}
                        />
                      </div>
                      
                      <div className="relative z-10 p-8 flex-1 flex flex-col">
                        <div className="flex-1">
                          <div className="flex items-start space-x-4 mb-6">
                            <span className="text-[#d1cdc2] font-mono text-sm w-6 flex-shrink-0 mt-1">
                              {String(index + 1).padStart(2, '0')}
                            </span>
                            <div className="flex-1">
                              <h3 className="text-2xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
                                {project.title}
                              </h3>
                              <p className="text-[#d1cdc2]/90 text-base leading-relaxed mb-6 group-hover:text-white/90 transition-colors">
                                {project.description}
                              </p>
                            </div>
                          </div>
                        </div>
                        
                        <div className="flex flex-wrap gap-2 mt-4">
                          {project.technologies && project.technologies.slice(0, 3).map((tech, i) => (
                            <span key={i} className="inline-block bg-[#0c1a3d] bg-opacity-50 text-[#d1cdc2] text-xs font-mono px-3 py-1 rounded-full">
                              {tech}
                            </span>
                          ))}
                          {project.technologies && project.technologies.length > 3 && (
                            <span className="inline-block bg-[#0c1a3d] bg-opacity-50 text-[#d1cdc2] text-xs font-mono px-3 py-1 rounded-full">
                              +{project.technologies.length - 3} more
                            </span>
                          )}
                        </div>
                      </div>
                    </div>
                  </motion.div>
                ))}
              </motion.div>
            </div>

            {/* Misc Projects Section */}
            {sortedMiscProjects.length > 0 && (
              <div className="mt-24">
                <h2 className="text-3xl md:text-4xl font-bold text-white mb-8">
                  Misc Projects
                </h2>
                <motion.div 
                  className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
                  variants={containerVariants}
                  initial="hidden"
                  animate="visible"
                >
                  {sortedMiscProjects.map((project, index) => (
                    <motion.div 
                      key={project.id}
                      className="relative group h-full"
                      custom={index}
                      variants={itemVariants}
                      whileHover="hover"
                      onMouseEnter={() => handleProjectHover(project.id)}
                      onMouseLeave={handleProjectLeave}
                    >
                      <Link 
                        to={`/projects/${project.slug}`} 
                        className="absolute inset-0 z-10"
                        aria-label={`View ${project.title} details`}
                      />
                      <div className="flex flex-col h-full bg-gradient-to-br from-[#03012f] to-[#0a0a2a] rounded-2xl overflow-hidden border border-white/5 hover:border-white/10 transition-all duration-300 group-hover:shadow-2xl group-hover:shadow-black/30 relative">
                        {/* Project Image Overlay */}
                        <div className="absolute inset-0 z-0 overflow-hidden opacity-0 group-hover:opacity-40 transition-opacity duration-500">
                          <img 
                            src={project.image} 
                            alt={project.title}
                            className="w-full h-full object-cover transform scale-110 group-hover:scale-100 transition-transform duration-1000 ease-out"
                            onError={(e) => {
                              e.target.onerror = null;
                              e.target.src = 'data:image/svg+xml;base64,';
                            }}
                          />
                        </div>
                        
                        <div className="relative z-10 p-8 flex-1 flex flex-col">
                          <div className="flex-1">
                            <div className="flex items-start space-x-4 mb-6">
                              <span className="text-[#d1cdc2] font-mono text-sm w-6 flex-shrink-0 mt-1">
                                {String(index + 1).padStart(2, '0')}
                              </span>
                              <div className="flex-1">
                                <h3 className="text-2xl font-semibold text-white mb-2 group-hover:text-white transition-colors">
                                  {project.title}
                                </h3>
                                <p className="text-[#d1cdc2]/90 text-base leading-relaxed mb-6 group-hover:text-white/90 transition-colors">
                                  {project.description}
                                </p>
                              </div>
                            </div>
                          </div>
                          
                          <div className="flex flex-wrap gap-2 mt-4">
                            {project.technologies && project.technologies.slice(0, 3).map((tech, i) => (
                              <span key={i} className="inline-block bg-[#0c1a3d] bg-opacity-50 text-[#d1cdc2] text-xs font-mono px-3 py-1 rounded-full">
                                {tech}
                              </span>
                            ))}
                            {project.technologies && project.technologies.length > 3 && (
                              <span className="inline-block bg-[#0c1a3d] bg-opacity-50 text-[#d1cdc2] text-xs font-mono px-3 py-1 rounded-full">
                                +{project.technologies.length - 3} more
                              </span>
                            )}
                          </div>
                        </div>
                      </div>
                    </motion.div>
                  ))}
                </motion.div>
              </div>
            )}
          </div>

          {/* Project Preview - shown on hover on desktop */}
          {!isMobile && (
            <AnimatePresence mode="wait">
              {hoveredProject !== null && (
                <motion.div 
                  key={hoveredProject}
                  className="hidden lg:block absolute top-1/2 right-0 transform -translate-y-1/2 translate-x-16 w-72 h-auto z-20"
                  variants={previewVariants}
                  initial="hidden"
                  animate="visible"
                  exit="exit"
                >
                  {/* Preview content here if needed */}
                </motion.div>
              )}
            </AnimatePresence>
          )}
        </div>
      </div>
    </section>
  );
};

export default Projects;
